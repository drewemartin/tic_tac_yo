<div>
  <p><%= link_to user.username, user_path(user.id) %></p>
  <p><%= user.gender %></p>
  <p><%= user.gender_i_like %></p>
  <%= form_tag( user_favorites_path(current_user),{:method=>:post, :class => 'favorite_form'}) do%>

    <% if current_user %>
          <%= hidden_field_tag :favoriter_id, current_user.id %>
    <% end%>

    <%= hidden_field_tag :favorited_id, user.id %>
    <%= submit_tag "Favorite" %>
  <% end %> 
  <button id="game_invite">invite to game</button>
</div>
<hr>


