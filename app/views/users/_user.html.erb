
<hr>


<ul>
      <% @users.each do |user| %>
        <li class="block"><%= link_to image_tag("https://placeimg.com/640/480/people"), user_path(user.id) %><span class='username'><%= link_to user.username, user_path(user.id) %> <%= user.gender %></span>
          
          <span class="links">

              <div class="btn-group">

                <%= link_to 'View', user_path(user.id), class: "btn btn-success fi-eye" %>
                <%= link_to 'Play', user_path(user.id), class: "btn btn-warning fi-puzzle", id: 'game_invite'  %>

                  <%= form_tag( favorites_path,{:method=>:post, :class => 'favorite_form'}) do%>

                      <% if current_user %>
                          <%= hidden_field_tag :favoriter_id, current_user.id %>
                      <% end%>

                      <%= hidden_field_tag :favorited_id, user.id %>
                      <%= submit_tag  "â™¥ Favorite", class: "btn btn-danger active" %>
                    <% end %> 
               </div>
          </span>

      </li>
        
       <% end %>
    </ul>

